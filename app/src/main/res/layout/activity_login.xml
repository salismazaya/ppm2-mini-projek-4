<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEEFF">

    <!-- ðŸŸ£ Bagian atas (header ungu) -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="vertical"
        android:background="#641FFD"
        android:gravity="center"
        android:paddingTop="40dp">

        <!-- Logo TalkMate -->
        <ImageView
            android:id="@+id/imgIllustration"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/talkmate_logo"
            android:contentDescription="TalkMate Logo"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TalkMate"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="22sp" />
    </LinearLayout>

    <!-- ðŸªŸ CardView (form login) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="-40dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvLoginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="#641FFD"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Username -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_user"
                    android:tint="#641FFD" />

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:hint="Username"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background"
                android:padding="8dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_password"
                    android:tint="#641FFD" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:hint="Password"
                    android:inputType="textPassword" />
            </LinearLayout>

            <!-- Tombol LOGIN -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="LOGIN"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                app:backgroundTint="#641FFD"
                app:cornerRadius="24dp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ðŸ©µ Link ke Register -->
    <TextView
        android:id="@+id/tvGoToRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Belum punya akun? Yuk, daftar sekarang!"
        android:textColor="#641FFD" />
</RelativeLayout>
